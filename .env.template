# Gemini API Configuration
GEMINI_API_KEY=

# Scanning Rate Limits (conservative defaults)
SCAN_RATE=5
MAX_CONCURRENCY=4
TIMEOUT=20

# Policy Controls
ALLOW_MANUAL_UNBLOCK=false
STORE_LLM_RESPONSES=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Output
OUTPUT_DIR=./outputs

# Triage Model Weights
ML_WEIGHT=0.4
LLM_WEIGHT=0.6

# Scanner Specific Settings
NUCLEI_RATE_LIMIT=5
NUCLEI_CONCURRENCY=3
HTTPX_THREADS=10
CRAWLER_DELAY=0.5
CRAWLER_MAX_DEPTH=3

# Database
DB_PATH=./db/scanner.db
